/* pages/platform/platform.wxss */
page {
  background: #f5f5f5;
  font-size: 28rpx;
  font-weight: 500;
}

.content {
  margin: 0 20rpx;
}

.info {
  width: 710rpx;
  padding: 0 20rpx;
  color: #333;
  box-sizing: border-box;
  border-radius: 14rpx;
  background-color: #fff;
}

.header {
  height: 80rpx;
  line-height: 80rpx;
  color: #808080;
}

.list {
  display: flex;
  flex-wrap: wrap;
}

.item {
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 33.3333%;
}

.image {
  margin-bottom: 30rpx;
  width: 64rpx;
  height: 64rpx;
}