  margin-left: 20rpx;
}

.item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.left {
  flex: 1;
  text-align: right;
}




.submit {
  display: flex;
  margin-top: 60rpx;
}

.submit1 {
  flex:4 ;
  padding: 0 !important;
  margin-right: 25rpx !important;
