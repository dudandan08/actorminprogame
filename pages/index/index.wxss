.swiper-block {
  height: 320rpx;
  width: 100%;
}
 
.swiper-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: unset;
  text-align: center;
}
 
.slide-image {
  height: 230rpx;
  width: 526rpx;
  border-radius: 10rpx;
  box-shadow: 0px 3px 10px 0px rgba(51, 51, 51, 0.3);
  margin: 0 rpx 30rpx;
  z-index: 1;
}
 
.active {
  transform: scale(1.21);
  transition: all 0.2s ease-in 0s;
  z-index: 20;
}