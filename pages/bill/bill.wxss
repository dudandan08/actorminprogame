/* pages/bill/bill.wxss */
.box{
   width:690rpx;
   margin: 0 auto;
   border: 1rpx solid #000;
   border-bottom: none;
}
.top{
  background-color: #169BD5;
  color: #fff;
  font-weight: bold;
  font-size: 30rpx;
}
.table view{
  flex: 1;
  box-sizing: border-box;
  border-bottom: 1rpx solid #000;
  border-left:  1rpx solid #000;
  text-align: center;
  font-size: 28rpx;
}
.table view:first-child{
  border-left: none;
}
.item{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}